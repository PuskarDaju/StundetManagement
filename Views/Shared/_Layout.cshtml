<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #e1cb83;
            color: #386fe8;
            padding: 15px 20px;
        }

        header h1 {
            margin: 0;
            font-size: 24px;
            display: inline-block;
        }

        nav {
            display: inline-block;
            margin-left: 30px;
        }

        nav span {
            margin-right: 20px;
            cursor: pointer;
        }

        main {
            padding: 20px;
        }

        footer {
            background-color: #f1f1f1;
            text-align: center;
            padding: 10px;
            margin-top: 20px;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>
<body>
<header>
    <h1>Student Management</h1>
    @{
        var currentPath = Context.Request.Path.ToString(); 
    }

    <nav class="mb-3">
        <a href="/" class="btn @(currentPath == "/" ? "btn-primary" : "btn-outline-primary") me-2">Home</a>
        <a href="/Student" class="btn @(currentPath.StartsWith("/Student") ? "btn-primary" : "btn-outline-primary") me-2">Student</a>
        <a href="/home/about" class="btn @(currentPath.StartsWith("/home/about") ? "btn-primary" : "btn-outline-primary")">About</a>
    </nav>

</header>

<main>
    @RenderBody()
</main>

<footer>
    &copy; @DateTime.Now.Year - Student Management
</footer>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
@RenderSection("Scripts", required: false)

</body>
</html>