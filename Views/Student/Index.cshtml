@{
    ViewData["Title"] = "Students List";
}
<div class="main-container">
    <div class="btn-container">
        <a href="/student/create" class="btn btn-primary">Create New</a>
    </div>

    <table id="studentsTable" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <!--- lops for the model sent from the controller --->
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.student_id</td>
                <td>@student.name</td>
                <td>@student.age</td>
                <td>@student.email</td>
                <td>
                    <a href="/Student/Edit/@student.student_id">
                        <button class="btn btn-primary">
                            <i class="fa fa-edit"></i> Edit
                        </button></a>
                    <a href="/Student/Delete/@student.student_id">
                        <button class=" btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button></a>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@section Scripts {
    
   
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                paging: true,
                searching: true, 
                ordering: true,
                info: true,
                dom: '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });
        });
    </script>
}

